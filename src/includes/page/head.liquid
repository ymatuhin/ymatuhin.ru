<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title | default: site.title }}</title>
  <meta name="description" content="{{ description | default: site.description }}">

  <link rel="preload" href="/assets/fonts/ubuntu-sans-mono-normal-latin.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/assets/fonts/ubuntu-sans-mono-normal-cyrillic.woff2" as="font" type="font/woff2" crossorigin>

  <style>
    @layer base, content, layout, components, utilities;

    {% include "styles/fonts.css" %}
    {% include "styles/base.css" %}

    {% include "styles/content.liquid", contentHtml: content %}
    {% include "styles/prism.liquid", contentHtml: content %}

    {% getBundle "css" %}
  </style>

  {% comment %} Icons {% endcomment %}
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon.png?v=JymzngPEmg2">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png?v=JymzngPEmg2">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png?v=JymzngPEmg2">
  <link rel="manifest" href="/assets/icons/manifest.json?v=JymzngPEmg2">
  <link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg?v=JymzngPEmg2" color="#0c00ff">
  <link rel="shortcut icon" href="/assets/icons/favicon.ico?v=JymzngPEmg2">
  <meta name="msapplication-config" content="/assets/icons/browserconfig.xml?v=JymzngPEmg2">
  <meta name="theme-color" content="#0c00ff">
  <link rel="manifest" href="/manifest.json">

  {% comment %} Rss + alternate language {% endcomment %}
  <link rel="alternate" href="{{ site.feed_url }}" type="application/atom+xml" title="{{ site.title }}">

  {% getBundle "html", "head" %}
</head>
