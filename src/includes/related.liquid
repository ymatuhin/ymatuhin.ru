<div class="cards cards_suggestions">
  {% assign maxRelated = 4 %}
  {% assign minCommonTags = 1 %}
  {% assign maxRelatedCounter = 0 %}
  {% assign postsTitles = '' %}


  {% for post in collections.posts %}
    <p>post: {{ post.tags }}</p>

    {% assign sameTagCount = 0 %}
    {% assign commonTags = '' %}

    {% for tag in post.tags %}
      {% if post.url != url %}
        {% if tags contains tag %}
          {% assign sameTagCount = sameTagCount | plus: 1 %}
          {% capture tagmarkup %}{{ tag }}{% endcapture %}
          {% assign commonTags = commonTags | append: tagmarkup %}
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if sameTagCount >= minCommonTags %}
        {% assign postsTitles = postsTitles | append: post.title %}

        {% include post-card.liquid
            tag="h2"
            tags=post.tags
            date=post.date
            imagePath=post.image.path
            link=post.url
            title=post.title
            description=post.description %}

      {% assign maxRelatedCounter = maxRelatedCounter | plus: 1 %}
      {% if maxRelatedCounter >= maxRelated %}
        {% break %}
      {% endif %}
    {% endif %}
  {% endfor %}

  {% if maxRelatedCounter < maxRelated %}
    {% assign limitCounter = maxRelated | minus: maxRelatedCounter %}

    {% for post in site.related_posts | limit: limitCounter %}
      {% unless postsTitles contains post.title %}
        {% include post-card.liquid
                tag="h2"
                tags=post.tags
                date=post.date
                imagePath=post.image.path
                link=post.url
                title=post.title
                description=post.description %}
      {% endunless %}
    {% endfor %}
  {% endif %}
</div>
