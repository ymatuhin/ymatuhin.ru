{% if categories.first %}
    {% assign cats = categories %}
{% else %}
    {% assign cats = categories | split: "," %}
{% endif %}

{% for category in cats %}
    {% assign category_trimmed = category | strip %}
    <a href="/{{ category_trimmed }}/">
        {% if category_trimmed == 'blog' %}Блог{% endif %}
        {% if category_trimmed == 'front-end' %}Фронтенд{% endif %}
        {% if category_trimmed == 'tools' %}Инструменты{% endif %}
        {% if category_trimmed == 'books' %}Книги{% endif %}
        {% unless category_trimmed == 'blog' or category_trimmed == 'front-end' or category_trimmed == 'tools' or category_trimmed == 'books' %}
            {{ category_trimmed }}
        {% endunless %}
    </a>
    {% unless forloop.last %}, {% endunless %}
{% endfor %}
