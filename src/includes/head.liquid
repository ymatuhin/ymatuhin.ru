<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{{ title | default: site.title }}</title>
<meta name="description" content="{{ description | default: site.description }}">

<!-- "Ubuntu Sans Mono" -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu+Sans+Mono:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet">

<!-- inline css -->
<style>
  :root {
    --font-family: "Ubuntu Sans Mono", Monaco, Consolas, "Ubuntu Mono";
    --background-color: #181825;
    --deeper-background-color: #11111b;
    --accent-color: #cba6f7;
    --text-color: #d6e8ee;
    --text-font-size: 17px;
    --text-line-height: 28px;
    --heading-font-size: 19px;
    --heading-line-height: 32px;
  }

  {% getBundle "css" %}
</style>

<link rel="stylesheet" href="{% getBundleFileUrl 'css', 'defer' %}" fetchpriority="low">

<style>
  @layer base, layout, components;

  @import "/assets/base.css" layer(base);
  @import "/assets/prism.css" layer(base);
  @import "/assets/layout.css" layer(layout);
  @import "/assets/header.css" layer(components);
  @import "/assets/footer.css" layer(components);
</style>

