{% include "page/intro.liquid" %}

<br>
<br>

<div class="cards">
  {% for post in collections.posts limit: 10 %}
  {% include "card.liquid"
    tag: "h2",
    categories: post.data.tags,
    date: post.date,
    image: post.data.image.path,
    link: post.url,
    title: post.data.title,
    description: post.data.description %}
  {% endfor %}
</div>

{% if collections.posts.size > 10 %}
  <p>
    <a class="button" href="/posts/2/">Older posts</a>
  </p>
{% endif %}
